@using MaktabToDoList.EndPoints.MVC.Models.ViewModels;
@model MaktabToDoList.EndPoints.MVC.Models.ViewModels.UpdateTaskViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ویرایش تسک</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'IRANSans', sans-serif !important;
        }
    </style>
</head>

<body class="flex flex-col min-h-screen bg-gradient-to-br from-cyan-50 to-slate-50 p-8">

    <div class="max-w-3xl w-full mx-auto bg-white shadow-lg rounded-xl p-8 border border-gray-100">
        <h2 class="text-2xl font-bold text-cyan-700 mb-8 text-center">✏️ ویرایش تسک</h2>

        <form asp-action="Update" asp-controller="TaskItem" method="post" class="space-y-6" id="taskForm">
            <input type="hidden" asp-for="GetTaskByIdViewModel.Id" />
            <input type="hidden" asp-for="GetTaskByIdViewModel.CreatorId" />

            <div>
                <label asp-for="GetTaskByIdViewModel.Title" class="block mb-2 text-sm font-medium text-gray-700">عنوان تسک</label>
                <input asp-for="GetTaskByIdViewModel.Title" type="text" required
                       class="w-full rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 text-gray-900 shadow-sm px-3 py-2"
                       placeholder="عنوان تسک را ویرایش کنید">
                <span asp-validation-for="GetTaskByIdViewModel.Title" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="GetTaskByIdViewModel.Description" class="block mb-2 text-sm font-medium text-gray-700">توضیحات</label>
                <textarea asp-for="GetTaskByIdViewModel.Description" rows="3"
                          class="w-full rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 text-gray-900 shadow-sm px-3 py-2"
                          placeholder="در صورت نیاز توضیحات را تغییر دهید"></textarea>
                <span asp-validation-for="GetTaskByIdViewModel.Description" class="text-red-500 text-sm"></span>
            </div>

\            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="GetTaskByIdViewModel.End" class="block mb-2 text-sm font-medium text-gray-700">تاریخ پایان</label>
                    <input asp-for="GetTaskByIdViewModel.End" type="datetime-local"
                           class="w-full rounded-lg border border-gray-300 focus:border-cyan-500 focus:ring-cyan-500 text-gray-900 shadow-sm px-3 py-2">
                    <span asp-validation-for="GetTaskByIdViewModel.End" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="GetTaskByIdViewModel.CategoryId" class="block mb-2 text-sm font-medium text-gray-700">دسته‌بندی</label>
                <select asp-for="GetTaskByIdViewModel.CategoryId"
                        class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-cyan-500">
                    <option value="">انتخاب کنید...</option>
                    @if (Model.TaskCategoryViewModel?.taskCategories != null)
                    {
                        foreach (var category in Model.TaskCategoryViewModel.taskCategories)
                        {
                            <option value="@category.Id"
                                    selected="@(category.Id == Model.GetTaskByIdViewModel.CategoryId)">
                                @category.Name
                            </option>
                        }
                    }
                </select>

                <span asp-validation-for="GetTaskByIdViewModel.CategoryId" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-center items-center gap-3 mt-8">
                <button type="submit"
                        class="px-8 py-2.5 bg-yellow-400 text-white font-semibold rounded-lg shadow-md hover:bg-yellow-300 transition">
                    💾 ویرایش تسک
                </button>

                <a asp-controller="TaskItem" asp-action="Index"
                   class="px-8 py-2.5 bg-gray-300 text-gray-700 font-semibold rounded-lg shadow-md hover:bg-gray-400 transition">
                    بازگشت
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
