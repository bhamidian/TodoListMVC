@using System.Globalization
@using MaktabToDoList.Domain.Core.Task.Enums
@model MaktabToDoList.EndPoints.MVC.Models.ViewModels.GetAllTaskItemsViewModel
@{
    Layout = null;
    var persian = new PersianCalendar();
    var now = DateTime.Now;
    string weekdayFa = now.DayOfWeek switch
    {
        DayOfWeek.Saturday => "شنبه",
        DayOfWeek.Sunday => "یک‌شنبه",
        DayOfWeek.Monday => "دوشنبه",
        DayOfWeek.Tuesday => "سه‌شنبه",
        DayOfWeek.Wednesday => "چهارشنبه",
        DayOfWeek.Thursday => "پنج‌شنبه",
        DayOfWeek.Friday => "جمعه",
    };
    string todayFa = $"{persian.GetYear(now)}/{persian.GetMonth(now):00}/{persian.GetDayOfMonth(now):00}";
    string currentTime = now.ToString("HH:mm");
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مدیریت تسک‌ها</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: "IRANSans", sans-serif;
        }

        table th, table td {
            text-align: center;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-cyan-50 to-gray-50 min-h-screen p-8">

    <div class="flex justify-between items-center mb-6">
        <a asp-action="Create" asp-controller="TaskItem"
           class="bg-cyan-600 hover:bg-cyan-500 text-white font-bold px-6 py-2 rounded-lg shadow-md transition transform hover:scale-105">
             افزودن تسک
        </a>

        <div class="text-gray-700 font-semibold text-lg">
            امروز @weekdayFa — @todayFa ساعت @currentTime
        </div>
    </div>

    <form asp-action="GetAllByFilters" asp-controller="TaskItem" method="get"
          class="bg-white shadow-md border border-gray-200 rounded-xl p-5 mb-8">

        <div class="flex flex-wrap gap-4 items-center justify-between">

            <div class="flex flex-wrap items-center gap-3">
                <input type="text" name="Title" value="@Model.FilterModel?.Title"
                       placeholder="جستجو در عنوان..."
                       class="border border-gray-300 rounded-lg px-3 py-2 w-64 shadow-sm focus:ring-cyan-500 focus:border-cyan-500" />

                <input type="text" name="CategoryName" value="@Model.FilterModel?.CategoryName"
                       placeholder="جستجو در دسته‌بندی..."
                       class="border border-gray-300 rounded-lg px-3 py-2 w-64 shadow-sm focus:ring-cyan-500 focus:border-cyan-500" />
            </div>

            <div class="flex flex-wrap items-center gap-3">
                <select name="Sort"
                        class="border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:ring-cyan-500 focus:border-cyan-500">
                    <option value="">مرتب‌سازی</option>
                    <option value="title-desc" selected="@(Model.FilterModel?.Sort == "title-asc" ? "selected" : null)">عنوان</option>
                    <option value="due-desc" selected="@(Model.FilterModel?.Sort == "due-desc" ? "selected" : null)">تاریخ اتمام(قدیمی تر ها)</option>
                    <option value="due-asc" selected="@(Model.FilterModel?.Sort == "due-asc" ? "selected" : null)"> تاریخ اتمام (جدیدترها)</option>
                    <option value="status-done" selected="@(Model.FilterModel?.Sort == "status-done" ? "selected" : null)">انجام‌شده </option>
                    <option value="status-notdone" selected="@(Model.FilterModel?.Sort == "status-notdone" ? "selected" : null)">انجام‌نشده </option>
                </select>

                <select name="StatusId"
                        class="border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:ring-cyan-500 focus:border-cyan-500">
                    <option value="">همه وضعیت‌ها</option>
                    <option value="0" selected="@(Model.FilterModel?.StatusId == 0 ? "selected" : null)">در حال انجام</option>
                    <option value="1" selected="@(Model.FilterModel?.StatusId == 1 ? "selected" : null)">انجام شده</option>
                    <option value="2" selected="@(Model.FilterModel?.StatusId == 2 ? "selected" : null)">انجام نشده</option>
                </select>

                <input type="date" name="End" value="@(Model.FilterModel?.End?.ToString("yyyy-MM-dd"))"
                       class="border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:ring-cyan-500 focus:border-cyan-500" />

                <button type="submit"
                        class="bg-cyan-600 hover:bg-cyan-500 text-white font-bold px-6 py-2 rounded-lg shadow-md transition transform hover:scale-105">
                    اعمال فیلتر
                </button>
            </div>
        </div>
    </form>




    <div class="overflow-x-auto bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-shadow duration-300">
        <table class="min-w-full text-sm text-gray-700">
            <thead class="bg-purple-100 text-purple-700 font-semibold">
                <tr>
                    <th class="px-4 py-3">شناسه</th>
                    <th class="px-4 py-3">موضوع</th>
                    <th class="px-4 py-3">تاریخ شروع</th>
                    <th class="px-4 py-3">تاریخ اتمام</th>
                    <th class="px-4 py-3">دسته‌بندی</th>
                    <th class="px-4 py-3">وضعیت</th>
                    <th class="px-4 py-3" colspan="2">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GetAllTasks)
                {
                    string rowClass = item.TaskItemStatus switch
                    {
                        TaskItemStatus.Doing => "bg-blue-100 text-blue-800",
                        TaskItemStatus.Done => "bg-green-100 text-green-800",
                        TaskItemStatus.NotDone => "bg-red-100 text-red-800",
                        _ => "bg-gray-50"
                    };
                    <tr class="border-t hover:bg-gray-50 transition @rowClass">
                        <td class="px-4 py-3">@item.Id</td>
                        <td class="px-4 py-3">@item.Title</td>
                        <td class="px-4 py-3">@item.StartDateFa</td>
                        <td class="px-4 py-3">@item.EndDateFa</td>
                        <td class="px-4 py-3">@item.CategoryName</td>
                        <td class="px-4 py-3">
                            <form asp-action="UpdateStatus" asp-controller="TaskItem" method="post" class="inline">
                                <input type="hidden" name="taskId" value="@item.Id" />
                                <select name="statusId" class="border rounded-lg px-3 py-1 focus:ring-purple-500 focus:border-purple-500" onchange="this.form.submit()">
                                    <option value="0" selected="@((int)item.TaskItemStatus == 0)">در حال انجام</option>
                                    <option value="1" selected="@((int)item.TaskItemStatus == 1)">انجام شده</option>
                                    <option value="2" selected="@((int)item.TaskItemStatus == 2)">انجام نشده</option>
                                </select>
                            </form>
                        </td>
                        <td class="px-4 py-3">
                            <form asp-action="Update" asp-controller="TaskItem" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="bg-yellow-400 hover:bg-yellow-300 transition px-5 py-2 rounded-lg text-white font-semibold shadow-sm">ویرایش</button>
                            </form>
                        </td>
                        <td class="px-4 py-3">
                            <form asp-action="Delete" asp-controller="TaskItem" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="bg-red-500 hover:bg-red-400 transition px-5 py-2 rounded-lg text-white font-semibold shadow-sm">حذف</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
<div class="flex justify-center mb-8">
    <a asp-action="Login" asp-controller="Account"
       class="bg-red-600 hover:bg-red-500 text-white px-5 py-2 rounded-lg shadow-md transition hover:scale-105">
        خروج
    </a>
</div>

</body>
</html>