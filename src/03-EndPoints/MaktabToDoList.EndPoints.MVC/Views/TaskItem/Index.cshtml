@using MaktabToDoList.Domain.Core.Task.Enums
@model MaktabToDoList.EndPoints.MVC.Models.ViewModels.GetAllTaskItemsViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مدیریت تسک‌ها</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: "IRANSans", sans-serif;
        }

        table th, table td {
            text-align: center;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-cyan-50 to-gray-50 min-h-screen p-8">

    <div class="flex flex-wrap justify-between items-center bg-white shadow-md rounded-xl p-4 mb-8 border border-gray-200">
        <button class="bg-cyan-600 hover:bg-cyan-500 text-white font-bold px-6 py-2 rounded-lg shadow-md transition transform hover:scale-105">
            <a asp-action="Create" asp-controller="TaskItem"> افزودن تسک</a>
        </button>

        <div class="flex flex-wrap items-center gap-4">
            <div class="flex items-center gap-2">
                <label for="filter" class="text-gray-700 font-medium">وضعیت:</label>
                <select id="filter" class="border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:ring-cyan-500 focus:border-cyan-500">
                    <option value="">همه</option>
                    <option value="doing">در حال انجام</option>
                    <option value="done">انجام‌ شده</option>
                    <option value="pending">در انتظار</option>
                </select>
            </div>
            <div class="flex items-center gap-2">
                <label for="dateFilter" class="text-gray-700 font-medium">تاریخ:</label>
                <input type="date" id="dateFilter" class="border border-gray-300 rounded-lg px-3 py-2 shadow-sm focus:ring-cyan-500 focus:border-cyan-500" />
            </div>
            <button class="bg-gray-200 hover:bg-cyan-100 text-cyan-700 font-medium px-5 py-2 rounded-lg shadow-sm transition hover:shadow-lg">اعمال فیلتر</button>
        </div>
    </div>

    <div class="overflow-x-auto bg-white rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-shadow duration-300">
        <table class="min-w-full text-sm text-gray-700">
            <thead class="bg-cyan-100 text-cyan-700 font-semibold">
                <tr>
                    <th class="px-4 py-3">شناسه</th>
                    <th class="px-4 py-3">موضوع</th>
                    <th class="px-4 py-3">تاریخ شروع</th>
                    <th class="px-4 py-3">تاریخ اتمام</th>
                    <th class="px-4 py-3">دسته‌بندی</th>
                    <th class="px-4 py-3">وضعیت</th>
                    <th class="px-4 py-3" colspan="2">عملیات</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.GetAllTasks)
                {
                    string rowClass = item.TaskItemStatus switch
                    {
                        TaskItemStatus.Doing => "bg-blue-100 text-blue-800",
                        TaskItemStatus.Done => "bg-green-100 text-green-800",
                        TaskItemStatus.NotDone => "bg-red-100 text-red-800",
                        _ => "bg-gray-50"
                    };
                    <tr id="row-@item.Id" class="border-t hover:bg-gray-50 transition @rowClass">
                        <td class="px-4 py-3">@item.Id</td>
                        <td class="px-4 py-3">@item.Title</td>
                        <td class="px-4 py-3">@item.Start</td>
                        <td class="px-4 py-3">@item.End</td>
                        <td class="px-4 py-3">@item.CategoryName</td>

                        <td class="px-4 py-3">
                            <form asp-action="UpdateStatus" asp-controller="TaskItem" method="post" class="inline">
                                <input type="hidden" name="taskId" value="@item.Id" />
                                <select name="statusId"
                                        class="border rounded-lg px-3 py-1 focus:ring-cyan-500 focus:border-cyan-500"
                                        onchange="this.form.submit()">
                                    <option value="0" selected="@((int)item.TaskItemStatus == 0)">در حال انجام</option>
                                    <option value="1" selected="@((int)item.TaskItemStatus == 1)">انجام شده</option>
                                    <option value="2" selected="@((int)item.TaskItemStatus == 2)">انجام نشده</option>
                                </select>
                            </form>
                        </td>


                        <td class="px-4 py-3">
                            <form asp-action="Update" asp-controller="TaskItem" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="bg-yellow-400 hover:bg-yellow-300 transition px-5 py-2 rounded-lg text-white font-semibold shadow-sm">ویرایش</button>
                            </form>
                        </td>
                        <td class="px-4 py-3">
                            <form asp-action="Delete" asp-controller="TaskItem" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="bg-red-500 hover:bg-red-400 transition px-5 py-2 rounded-lg text-white font-semibold shadow-sm">حذف</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</body>
</html>
