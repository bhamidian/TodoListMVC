@using MaktabToDoList.EndPoints.MVC.Models.ViewModels;
@model MaktabToDoList.EndPoints.MVC.Models.ViewModels.UserAuthenticationViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ثبت نام</title>
    <link rel="stylesheet" href ="~/css/AuthenticationStyle.css" />

</head>
<body>
    <div class="auth-container">
        <div class="auth-toggle">
            <a asp-action = "Login" asp-controller = "Account" class="auth-toggle-btn">ورود</a>
            <button class="auth-toggle-btn active">ثبت نام</button>
        </div>

        <form asp-action = "Register" asp-controller = "Account" method="post" class="auth-form active" id="signup-form">
            <h2 class="form-title">ثبت نام</h2>

            <div class="input-group">
                <label for="signup-email">نام کاربری</label>
                <input type="text"
                       id="signup-email"
                       asp-for="UserName"
                       placeholder="نام کاربری را وارد کنید"
                       required />
            </div>

            <div class="input-group">
                <label for="signup-password">رمزعبور</label>
                <input type="password"
                       id="signup-password"
                       asp-for="Password"
                       placeholder="رمز عبور را وارد کنید"
                       required />
            </div>

            <button type="submit" class="submit-btn">ساخت حساب</button>
            @if (TempData["Message"] != null)
            {
                <div class="text-green-600 mb-4">
                    @TempData["Message"]
                </div>
            }

            <div class="form-footer">حساب دارید؟ <a asp-action="Login" asp-controller="Account">ورود</a></div>
        </form>
    </div>


</body>
</html>
