@using MaktabToDoList.EndPoints.MVC.Models.ViewModels;
@model MaktabToDoList.EndPoints.MVC.Models.ViewModels.UserAuthenticationViewModel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ورود</title>
    <link rel="stylesheet" href="./css/AuthenticationStyle.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-toggle">
            <button class="auth-toggle-btn active">ورود</button>
            <a asp-action="Register" asp-controller="Account" class="auth-toggle-btn">ثبت نام</a>
        </div>

        <form asp-action ="Login" asp-controller ="Account" method ="post" class="auth-form active" id="login-form">
            <h2 class="form-title">خوش آمدید</h2>
            <p class="form-subtitle">اطلاعات خود را وارد کنید</p>

            <div class="input-group">
                <label for="login-email">نام کاربری</label>
                <input type="text"
                       id="login-email"
                       asp-for="UserName"
                       placeholder="نام کاربری را وارد کنید"
                       required />
            </div>

            <div class="input-group">
                <label for="login-password">رمزعبور</label>
                <input type="password"
                    asp-for="Password"
                       id="login-password"
                       placeholder="رمزعبور خود را وارد کنید"
                       required />
            </div>

            <div class="remember-forgot">
                <div class="remember-me">
                    <input type="checkbox" id="remember-me" />
                    <label for="remember-me">مرا به خاطر داشته باش</label>
                </div>
                <a href="#" class="forgot-password">فراموشی رمز عبور</a>
            </div>

            <button type="submit" class="submit-btn">ورود</button>
            <div class="text-red-600 mb-4">
                @TempData["Message"]
            </div>

            <div class="form-footer">
                حساب نداری؟ <a asp-action="Register" asp-controller="Account">ثبت نام</a>
            </div>
        </form>
    </div>


</body>
</html>
